<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/borang_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    tools:context=".GalleryFragment">

    <LinearLayout
        android:id="@+id/borang_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            app:srcCompat="@drawable/lada3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/borang" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="257dp"
            android:layout_height="91dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/kebun" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/name_pass_input"
            android:ems="18"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/name_pass_input"
            android:ems="10"
            android:hint="Alamat"
            android:inputType="textPostalAddress"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/daerah"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/name_pass_input"
            android:ems="10"
            android:hint="Daerah"
            android:inputType="textPostalAddress"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/name_pass_input"
            android:ems="10"
            android:hint="No. Hp"
            android:inputType="phone"
            android:paddingLeft="18dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="264dp"
            android:layout_height="96dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/kebun2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JENIS"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEMENGOK AMAN"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEMENGOK EMAS"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEMENGOK PERAK"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KUCHING"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INDIA"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lain-lain"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MUSIM KITARAN"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"/>

        <CheckBox
            android:id="@+id/musim1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BELUM MATANG"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/musim2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUNGA"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/musim3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUAH"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/musim4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUAI"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/musim5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEPAS TUAI"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/luas"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Keluasan Tanaman"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/pokok"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Bilangan Pokok"
            android:paddingLeft="18dp"
            android:inputType="number"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/jangkit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Bilangan Pokok Dijangkit"
            android:paddingLeft="18dp"
            android:inputType="number"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/peratusan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Peratusan Pokok Dijangkiti"
            android:paddingLeft="18dp"
            android:inputType="number"
            android:background="@drawable/name_pass_input" />

        <TextView
            android:id="@+id/persekitaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEADAAN PERSEKITARAN KEBUN"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"/>

        <CheckBox
            android:id="@+id/kawasan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAWASAN BERBUKIT"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/kawasan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RATA"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/kawasan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lain-lain"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/simptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPTOM-SIMPTOM JANGKITAN"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/daun"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Daun"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/buah"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Buah"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/batang"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Batang"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/dahan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Dahan atau Ranting"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/pucuk"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Pucuk"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <EditText
            android:id="@+id/tangkai"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Tangkai Buah/Ranting"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />


        <EditText
            android:id="@+id/akar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Akar"
            android:paddingLeft="18dp"
            android:inputType="textPersonName"
            android:background="@drawable/name_pass_input" />

        <Button
            android:id="@+id/galleryImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Open Gallery"/>

        <ImageView
            android:id="@+id/imageToUpload"
            android:layout_width="362dp"
            android:layout_height="238dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/submitImage"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:paddingRight="25dp"
            android:text="Submit" />








    </LinearLayout>
</ScrollView>